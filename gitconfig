[user]
	name = Garret Jennings
	email = gjennings@me.com
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
[credential]
	helper = osxkeychain
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
[mergetool]
	keepBackup = false
[merge]
	tool = neovim
[pull]
	rebase = false
[diff]
	tool = neovim
[mergetool "neovim"]
	cmd = nvim -d -c \"wincmd l\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[difftool "neovim"]
	cmd = nvim -d -c \"wincmd l\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
