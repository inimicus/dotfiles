
clear

bold=`tput bold`
normal=`tput sgr0`
red=`tput setaf 1`
white=`tput setaf 7`

echo "${bold}${red}  _       _           _"
echo " (_)_ __ (_)_ __ ___ (_) ___ _   _ ___" 
echo " | | '_ \\| | '_ \` _ \\| |/ __| | | / __|"
echo " | | | | | | | | | | | | (__| |_| \\__ \\"
echo " |_|_| |_|_|_| |_| |_|_|\\___|\\__,_|___/"
echo "${white}________________________________________${normal}"
